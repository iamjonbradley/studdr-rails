= form_for(@post) do |f|
  - if @post.errors.any?
    #error_explanation
      %h2
        = pluralize(@post.errors.count, "error")
        prohibited this post from being saved:
      %ul
        - @post.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :category
    %br/
    = f.select :category, options_from_collection_for_select(Category.all, "id", "name")
  .field
    = f.label :body
    %br/
    = f.text_area :body
  .actions
    = f.submit
